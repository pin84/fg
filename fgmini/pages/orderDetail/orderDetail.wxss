page {
  background: #F5F5F5;
}
.order {
  padding: 36rpx 0;
}
.order .messageBox {
  width: 686rpx;
  background: white;
  box-shadow: 0rpx 0rpx 32rpx rgba(21, 17, 139, 0.06);
  border-radius: 12rpx;
  margin: 0 auto 24rpx;
  padding-bottom: 24rpx;
}
.order .messageBox .header {
  height: 86rpx;
  line-height: 86rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #323232;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #E6E6E6;
}
.order .messageBox .header .orderStatus {
  color: #e64340;
}
.order .messageBox .content {
  padding: 24rpx;
  color: #323232;
  font-size: 28rpx;
  line-height: 42rpx;
}
.order .messageBox .messageLine {
  font-size: 28rpx;
  color: #999999;
  padding: 12rpx 24rpx;
}
.order .messageBox .messageLine .leftBox {
  text-align: left;
}
.order .messageBox .messageLine .rightBox {
  text-align: right;
  max-width: 70%;
}
.order .imgBox {
  width: 686rpx;
  background: white;
  box-shadow: 0rpx 0rpx 32rpx rgba(21, 17, 139, 0.06);
  border-radius: 12rpx;
  margin: 0 auto 24rpx;
  padding: 24rpx 0 0 24rpx;
  flex-wrap: wrap;
}
.order .imgBox .imgContent {
  width: 196rpx;
  height: 196rpx;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
}
.order .imgBox .imgContentImg {
  border-radius: 8rpx;
}
