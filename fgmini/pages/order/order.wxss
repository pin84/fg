page {
  background: #F5F5F5;
}
.tabsContent {
  width: 100vw;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: white;
  box-shadow: 0px 0px 12px 0px rgba(205, 191, 195, 0.6);
  z-index: 9999;
}
.tabsContentFill {
  width: 100vw;
  height: 100rpx;
}
.order {
  padding: 36rpx 0;
}
.order .orderItem {
  width: 686rpx;
  background: white;
  box-shadow: 0rpx 0rpx 32rpx rgba(21, 17, 139, 0.06);
  border-radius: 12rpx;
  margin: 0 auto 24rpx;
}
.order .orderItem .header {
  height: 86rpx;
  font-size: 28rpx;
  color: #999999;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #E6E6E6;
}
.order .orderItem .header .orderStatus {
  color: #e64340;
}
.order .orderItem .content {
  width: 100%;
  padding: 24rpx;
  border-bottom: 2rpx solid #E6E6E6;
}
.order .orderItem .content .imgBox {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}
.order .orderItem .content .imgBoxImg {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
}
.order .orderItem .content .msgBox {
  width: calc(100% - 180rpx);
  padding: 12rpx 0 12rpx 24rpx;
}
.order .orderItem .footer {
  padding: 24rpx;
  flex-wrap: wrap;
}
.order .orderItem .footer .orderBtn {
  line-height: 50rpx;
  height: 50rpx;
  font-size: 24rpx;
  background: #e64340;
  color: white;
  border-radius: 25rpx;
  text-align: center;
  padding: 0 24rpx;
  margin: 0 0 12rpx 12rpx;
}
