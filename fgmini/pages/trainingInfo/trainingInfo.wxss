.train-info {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.train-info .title {
  text-align: center;
  padding: 20rpx 0;
  font-weight: 600;
  border-bottom: 1px solid #f1f1f1;
}
.train-info .list {
  height: 100%;
  padding: 20rpx;
  overflow: scroll;
}
.train-info .list .item {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #f1f1f1;
}
.train-info .list .item .item-title {
  width: 100%;
  margin-right: 20rpx;
}
.train-info .list .item .item-time {
  flex: 0 0 150rpx;
  font-size: 24rpx;
}
.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
