.tags {
  display: flex;
  flex-wrap: wrap;
}
.tagsItem {
  height: 42rpx;
  line-height: 42rpx;
  padding: 0 12rpx;
  color: #342171;
  border-radius: 4rpx;
  border: 1px solid #D9DBEE;
  margin: 0 16rpx 16rpx 0;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
  display: inline-block;
  text-align: center;
}
.ellipsis_more {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.waterfall {
  width: 100vw;
  height: auto;
  display: flex;
  justify-content: center;
  padding: 8rpx 20rpx 48rpx;
  opacity: 0;
  transition: all 0.3s;
}
.waterfall_show {
  opacity: 1;
}
.waterfallList {
  width: 50%;
  padding: 0 12rpx;
  height: fit-content;
}
.waterfallItem {
  width: 100%;
  height: fit-content;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0px 12px 12px 0px rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
  transition: all 0.3s;
}
.waterfallItemImg {
  width: 100%;
  background: #F5F6F6;
  border-radius: 16rpx;
}
.waterfallMsg {
  padding: 8rpx 16rpx;
}
.waterfallMsgTitle {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}
.waterfallFill {
  flex-wrap: wrap;
  position: absolute;
  left: -100%;
  opacity: 0;
  z-index: -999;
}
